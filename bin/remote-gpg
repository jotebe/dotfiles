#!/bin/bash

set -euo pipefail

host="${1:-unset}"; shift || :
if [[ $host = unset ]]; then
        echo "Supply a hostname"
        exit 1
fi

ssh() {
        command ssh -o 'VisualHostKey=no' "$@"
}
cleanup() {
        ssh $host 'rm -vf ~/.gnupg/S.gpg-agent'
}
cleanup

trap cleanup INT KILL EXIT

uid_dir=$(ssh -v $host "echo $UID")

timeout=3600

echo "connecting to $host"
ssh \
        -o 'ControlPath=none' \
        -o 'ExitOnForwardFailure=yes' \
        -R /run/user/${uid_dir}/gnupg/S.gpg-agent:/run/user/${UID}/gnupg/S.gpg-agent.extra \
        $host \
        "echo 'GPG agent tunnel active for $timeout seconds. Interrupt (^C) when finished.'; sleep $timeout"
